{
    "manifest_version": 2,

    "name": "InstaSave",
    "version": "1.3",
	"author": "Mazillka",
	"description": "Easy way to save photos and videos from Instagram.com",

	"permissions": [
		"http://instagram.com/*",
		"contextMenus"
	],
	
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
		"48": "icons/64x64.png",
		"128": "icons/128x128.png"
    },

	"background": { 
		"persistent": false,
		"scripts": [ "background.js" ]
	},
	
	"content_scripts": [
		{
			"all_frames": false,
			"js": [ "contentscript.js" ],
			"matches": [ "http://instagram.com/*"],
			"run_at": "document_idle"
		}
	]
 }